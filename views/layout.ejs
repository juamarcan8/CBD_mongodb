<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/layout.css">
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      display: flex;
      flex-direction: column;
      height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
      overflow-x: hidden;
    }
    header, footer {
      text-align: center;
      padding: 20px;
      background-color: #333;
      color: white;
      width: 100%;
    }
    header h1 {
      color: white;
      margin: 0;
    }
    .container {
      display: flex;
      flex-direction: column;
      justify-content: center; /* Alinea los elementos en el centro vertical */
      align-items: center; /* Alinea los elementos en el centro horizontal */
      flex-grow: 1;
      padding: 20px;
    }
    .navigation-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-bottom: 20px;
    }
    .add-product-button, .delete-form-button, .edit-button {
      display: inline-block;
      padding: 10px 20px;
      font-size: 14px;
      color: white;
      background-color: #007BFF;
      border: none;
      border-radius: 5px;
      text-align: center;
      text-decoration: none;
      cursor: pointer;
      width: 100%;
    }
    .add-product-button:hover, .delete-form-button:hover, .edit-button:hover {
      background-color: #0056b3;
    }
    #results-container ul {
      list-style-type: none;
      padding: 0;
    }
    #results-container li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-bottom: 10px;
      width: 100%;
    }
    #results-container li a {
      color: black;
      text-decoration: none;
      flex-grow: 1;
      width: 100%;
    }
  </style>
</head>
<body>
  <% if (content === 'search-form') { %>
    <header>
      <h1>Búsqueda de productos</h1>
    </header>
  <% } else if (content === 'product-details') { %>
    <header>
      <h1>Detalles del producto</h1>
    </header>
  <% } %>

  
  <div class="container">
    <div class="navigation-buttons">
      <% if (content === 'search-form') { %>
        <%- include('search-form.ejs') %>  
      <% } %>
    </div>

    <% if (content === 'add-product-form') { %>
      <%- include('add-product-form.ejs') %>
    <% } else if (content === 'product-details') { %>
      <%- include('product-details.ejs', { producto: producto }) %>

      <form action="/producto/<%= producto._id %>/eliminar" method="post">
        <input type="submit" class="delete-form-button" value="Eliminar producto">
      </form>

    <% } else { %>
      <div id="results-container">
        <% if (typeof productos !== 'undefined' && productos.length > 0) { %>
          <h2>Resultados de la búsqueda:</h2>
          <ul>
            <% productos.forEach(producto => { %>
              <li>
                <a href="/producto/<%= producto._id %>">
                  <span><%= producto.nombre %>: <%= producto.precio %></span>
                </a>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p>No hay resultados para mostrar.</p>
        <% } %>

        <% if (content !== 'add-product-form' && content !== 'product-details') { %>
          <a href="/productos/agregar">
            <button class="add-product-button">Agregar Producto</button>
          </a>
        <% } %>
      </div>
    <% } %>
  </div>
  <footer>
    <p>© 2024 - Todos los derechos reservados</p>
  </footer>
</body>
</html>
